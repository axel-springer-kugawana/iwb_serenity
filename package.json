{
    "name": "iwb_serenity",
    "version": "0.0.1",
    "description": "Immoweb Front-end Framework",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "webpack --config webpack.config.js",
        "css": "npm-run-all --parallel css:lint css:compile --sequential css:prefix css:minify",
        "css:lint": "stylelint src/scss/**/*.scss --config build/.stylelintrc",
        "css:compile": "node-sass src/scss/ -o dist/css/ --source-map dist/css/",
        "css:prefix": "postcss --replace dist/css/*.css !dist/css/*.min.css",
        "css:minify": "cleancss --level 1 --output dist/css/serenity.min.css dist/css/serenity.css",
        "watch:css": "nodemon --watch src/scss/ --ext scss --exec \"npm run css\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/axel-springer-kugawana/iwb_serenity.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/axel-springer-kugawana/iwb_serenity/issues"
    },
    "homepage": "https://github.com/axel-springer-kugawana/iwb_serenity#readme",
    "devDependencies": {
        "autoprefixer": "^9.2.1",
        "clean-css-cli": "^4.2.1",
        "node-sass": "^4.9.4",
        "nodemon": "^1.18.4",
        "npm-run-all": "^4.1.3",
        "postcss-cli": "^6.0.0",
        "stylelint": "^9.6.0"
    },
    "browserslist": [
        "> 0.3%",
        "last 7 versions",
        "Android >= 4",
        "Firefox >= 27",
        "iOS >= 7",
        "Safari >= 7",
        "Chrome >= 30",
        "Explorer >= 11"
    ]
}
